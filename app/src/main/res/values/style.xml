<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom EditText style. -->
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#000000</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Custom Spinner style. -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">

        <item name="android:padding">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Custom Button style. -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.Colored">

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#0000FF</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>

    </style>

    <style name="CustomTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">#FFFFFF</item> <!-- SeteazÄƒ culoarea fundalului la alb -->
    </style>
    <style name="AppButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
