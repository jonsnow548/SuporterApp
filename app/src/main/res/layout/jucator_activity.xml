<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient"
    tools:context=".jucator.JucatorActivity">

    <Button
        android:id="@+id/btnTrainingSchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:backgroundTint="#FF0000"
        android:elevation="4dp"
        android:text="Program Antrenamente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPerformanceStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Statistici Performanță"
        app:layout_constraintTop_toBottomOf="@id/btnTrainingSchedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#FF0000"
        android:layout_marginTop="16dp"
        android:elevation="4dp"/>

    <Button
        android:id="@+id/btnTeamCommunication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chat Echipă"
        app:layout_constraintTop_toBottomOf="@id/btnPerformanceStats"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:elevation="4dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="29dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/btnTrainingSchedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>
